<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.mattbentson.sudoku"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:icon="@drawable/applogo"
        android:label="@string/app_name" >
        <activity
            android:name="edu.neu.madcourse.mattbentson.sudoku.Sudoku"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.neu.madcourse.mattbentson.sudoku.About"
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="edu.neu.madcourse.mattbentson.sudoku.Prefs"
            android:label="@string/settings_title" >
        </activity>
        <activity
            android:name="edu.neu.madcourse.mattbentson.sudoku.Game"
            android:label="@string/game_title" />
        <activity
            android:name="edu.neu.madcourse.mattbentson.sudoku.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.neu.madcourse.mattbentson.sudoku.AboutMe"
            android:label="@string/title_activity_about_me" >
        </activity>
    </application>

</manifest>