<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.neu.madcourse.mattbentson.Dictionary"
    android:background="#ffecffd6">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textInput"
        android:autoText="false"
        android:editable="true"
        android:enabled="true"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/dictionaryClearBtn"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listOfWords"
        android:layout_below="@+id/textInput"
        android:layout_alignParentLeft="true"
        android:singleLine="false"
        android:textSize="18dp"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dictionary_clear_btn"
        android:id="@+id/dictionaryClearBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#ffffa8b1"
        android:height="30dp"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:width="75dp"
        android:layout_alignBottom="@+id/textInput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dictionary_ack_btn"
        android:id="@+id/dictionaryAckBtn"
        android:background="#ffffa8b1"
        android:height="30dp"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:width="175dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_btn"
        android:id="@+id/dictionaryBackBtn"
        android:background="#ffffa8b1"
        android:height="30dp"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:width="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
